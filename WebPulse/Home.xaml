<UserControl x:Class="WebPulse.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebPulse"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="MinimalScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="4"/> <!-- Super thin scrollbar -->
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Width="4">
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Height="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="PART_Thumb" Width="4" Height="40" Background="Gray"
                                          />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Height="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>




    </UserControl.Resources>
    <Grid Background="{DynamicResource MainContentBackground}">
        
     <Grid.RowDefinitions>
       <RowDefinition Height="Auto"/>
       <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderLineBrush}" BorderThickness="1" CornerRadius="10" Width="200" Height="100" Background="{DynamicResource ControlBackgroundBrush}" Margin="10,50,10,10" Opacity="1">
                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Border Grid.Row="0" BorderThickness="1" BorderBrush="{DynamicResource BorderLineBrush}" CornerRadius="10" Width="200" Height="100" Background="{DynamicResource ControlBackgroundBrush}" Margin="10,50,10,10" Opacity="1">
                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="2">
            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderLineBrush}" BorderThickness="1" CornerRadius="10" Width="200" Height="100" Background="{DynamicResource ControlBackgroundBrush}" Margin="10,50,10,10" Opacity="1">
                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
    <Grid Grid.Row="1">
        <Border BorderThickness="1" BorderBrush="{DynamicResource BorderLineBrush}" 
                CornerRadius="10" Width="auto" Height="auto" 
                Background="{DynamicResource ControlBackgroundBrush}" 
                Margin="50,50,50,5" Opacity="1">

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="5">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource MinimalScrollBar}"/>
                </ScrollViewer.Resources>
    
                <StackPanel x:Name="ReleaseList" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </ScrollViewer>


        </Border>


    </Grid>
            
    </Grid>
</UserControl> 
<!-- Left, Top, Right, Bottom -->