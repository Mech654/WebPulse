<Application x:Class="WebPulse.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Light Colors -->
            <Color x:Key="PrimaryButtonBackgroundColor">#E4E5F1</Color>
            <Color x:Key="PrimaryButtonTextColor">#484B6A</Color>
            <Color x:Key="TextBlockColor">#484B6A</Color>
            <Color x:Key="ControlBackgroundColor">#ebebeb</Color>
            <Color x:Key="MainContentBackgroundColor"> #FFFFFF</Color>
            <Color x:Key="BorderLineColor"> #00202020</Color>
            
            <!-- Dark Colors -->
            <Color x:Key="DarkPrimaryButtonBackgroundColor">#333333</Color>
            <Color x:Key="DarkPrimaryButtonTextColor">#D1D1D1</Color>
            <Color x:Key="DarkSecondaryTextColor"> #B0B0B0 </Color>
            <Color x:Key="DarkTextBlockColor">#D1D1D1</Color>
            <Color x:Key="DarkControlBackgroundColor">#3D3D3D</Color>
            <Color x:Key="DarkMainContentBackgroundColor">#393939</Color>
            <Color x:Key="DarkBorderLineColor"> #202020</Color>
            


            <!-- Brushes -->
            <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="{StaticResource PrimaryButtonBackgroundColor}" />
            <SolidColorBrush x:Key="PrimaryButtonTextBrush" Color="{StaticResource PrimaryButtonTextColor}" />
            <SolidColorBrush x:Key="SecondaryButtonTextBrush" Color="{StaticResource PrimaryButtonTextColor}" />
            <SolidColorBrush x:Key="TextBlockBrush" Color="{StaticResource TextBlockColor}" />
            <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}" />
            <SolidColorBrush x:Key="MainContentBackground" Color="{StaticResource MainContentBackgroundColor}" />
            <SolidColorBrush x:Key="BorderLineBrush" Color="{StaticResource BorderLineColor}" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
